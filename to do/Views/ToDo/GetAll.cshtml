@model IEnumerable<to_do.Models.ToDo>

@{
    ViewData["Title"] = "GetAll";
    int liczba=1;

}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />




<div >
   
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Notes</th>
                <th>Date</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
            

                <tr>
                    <td>@item.Name</td>
                    <td>@item.Notes</td>
                    <td>@item.Date</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="ToDo">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                        @liczba ++;
                    </td>
                </tr>
            }
        </tbody>


    </table>

    <div class="btn-create-div">
        <p>
            <a class="glow-on-hover" asp-action="Create">Create New</a>
        </p>
    </div>
   
   
</div>


